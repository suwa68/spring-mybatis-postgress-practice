<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="alpha.gewei_alp_week1_spring.excercise3.dao.PaymentMapper">

    <select id="getPaymentById"
                resultType="alpha.gewei_alp_week1_spring.excercise3.model.Payment">
        select *
        from payment
        where payment_id = #{id}
    </select>
</mapper>