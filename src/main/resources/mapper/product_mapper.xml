<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="alpha.gewei_alp_week1_spring.excercise3.dao.ProductMapper">


    <select id="selectAllProduct"  resultType="alpha.gewei_alp_week1_spring.excercise3.model.Product">
        select * from product;
    </select>

    <select id="selectProductById"   resultType="alpha.gewei_alp_week1_spring.excercise3.model.Product">
        select * from product where product_id = #{productId}
    </select>

    <!-- 存貨相關 -->
    <select id="selectStockByProductId"  resultType="java.lang.Integer">
        select instock
        from   product
        where  product_id = #{productId}
    </select>

    <update id="updateProductStock" >
        update product
        set instock = #{inStock}
        where product_id = #{productId}
    </update>

    <update id="updateProductStockByIdAndStock">
        update product
        set instock = #{newStock}
        where product_id = #{productId}
    </update>
</mapper>